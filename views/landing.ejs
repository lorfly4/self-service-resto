<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Store - Self Service Order</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap');
        body { font-family: 'Poppins', sans-serif; }
    </style>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center justify-center p-4">

    <div class="text-center mb-10">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">Welcome</h1>
        <p class="text-gray-600">Please select a store to order from</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-6xl">
        <% stores.forEach(store => { %>
            <a href="/stores/<%= store.slug %>" class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition transform hover:-translate-y-1 block">
                <div class="h-32 bg-indigo-600 flex items-center justify-center">
                    <h2 class="text-2xl font-bold text-white px-4 text-center"><%= store.name %></h2>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 mb-4"><%= store.description || 'No description available.' %></p>
                    <div class="flex items-center text-indigo-600 font-semibold">
                        <span>Visit Store</span>
                        <i class="fas fa-arrow-right ml-2"></i>
                    </div>
                </div>
            </a>
        <% }) %>
    </div>

    <div class="mt-12 text-gray-500 text-sm">
        <a href="/admin/login" class="hover:underline">Admin Login</a>
    </div>

</body>
</html>
