<%- include('partials/header') %>

<div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-gray-800">Order History</h2>

    <% if (orders.length > 0) { %>
        <div class="space-y-6">
            <% orders.forEach(order => { %>
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100 hover:border-indigo-100 transition-colors">
                    <div class="p-6">
                        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
                            <div>
                                <h3 class="text-lg font-bold text-gray-900 flex items-center">
                                    <span class="mr-2">#<%= order.order_number %></span>
                                    <% if (order.status === 'pending') { %>
                                        <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full uppercase tracking-wide">Pending</span>
                                    <% } else if (order.status === 'paid') { %>
                                        <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full uppercase tracking-wide">Paid</span>
                                    <% } else if (order.status === 'completed') { %>
                                        <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full uppercase tracking-wide">Completed</span>
                                    <% } else { %>
                                        <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full uppercase tracking-wide"><%= order.status %></span>
                                    <% } %>
                                </h3>
                                <p class="text-sm text-gray-500 mt-1"><%= new Date(order.createdAt).toLocaleString() %></p>
                            </div>
                            <div class="text-right mt-2 md:mt-0">
                                <span class="text-xl font-bold text-indigo-600">Rp <%= order.total_amount.toLocaleString() %></span>
                            </div>
                        </div>

                        <div class="border-t border-gray-100 pt-4">
                            <ul class="space-y-2">
                                <% order.OrderItems.forEach(item => { %>
                                    <li class="flex justify-between text-sm text-gray-600">
                                        <div class="flex items-center">
                                            <span class="bg-gray-100 px-2 py-1 rounded mr-3 text-xs font-mono font-bold"><%= item.quantity %>x</span>
                                            <span><%= item.Item ? item.Item.name : 'Unknown Item' %></span>
                                        </div>
                                        <span>Rp <%= (item.price_at_time * item.quantity).toLocaleString() %></span>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                        
                        <% if(order.status === 'pending') { %>
                            <div class="mt-6 flex justify-end">
                                <a href="/payment/<%= order.id %>" class="bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-bold py-2 px-4 rounded-lg transition-colors">
                                    Pay Now
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center py-20 bg-white rounded-2xl shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-2xl text-gray-500 mb-6">No order history found.</p>
            <a href="/" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
                Start Ordering
            </a>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
